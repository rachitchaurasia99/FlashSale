<h1>WishList</h1>
<%= button_to "Clear Wishlist", clear_wishlist_order_path, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-primary" %>
<% @wishlist.line_items.each do |line_item| %>
  <%= render line_item %>
  <%= button_to 'Remove' , remove_from_cart_order_path(line_item) %>
  <%= button_to 'Move to cart' , move_to_cart_order_path(line_item, order_id: current_order) %>
  </br>
<% end %>
